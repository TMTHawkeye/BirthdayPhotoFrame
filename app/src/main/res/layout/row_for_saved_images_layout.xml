<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/_2sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/image_card_frame"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_130sdp"
        app:cardCornerRadius="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel_saved"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp">

                <ImageView
                    android:id="@+id/img_saved"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/balloons_icon_svg" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                android:background="@color/blue">


                <RelativeLayout
                    android:id="@+id/nameoffile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fileName_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="file name.png"
                        android:textSize="@dimen/_9sdp"
                        android:textColor="@color/white"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/nameoffile"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="@dimen/_2sdp"
                        android:id="@+id/delete_image_id"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/delete_saved_icon_svg"
                        app:tint="@color/white"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_15sdp"/>
                    <ImageView
                        android:padding="@dimen/_2sdp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/share_image_id"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/share_quote_svg"
                        app:tint="@color/white"/>



                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>